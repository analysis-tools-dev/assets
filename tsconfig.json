{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "references": [
        {
            "path": "./tsconfig.build.json"
        }
    ],
    "exclude": [
        "node_modules"
    ]
}